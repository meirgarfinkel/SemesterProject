<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/slim_activity_margin"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_first_number"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_second_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_second_number" />

    <TextView
        android:id="@+id/txt_selector"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="+"
        android:textSize="20sp"
        android:textColor="@color/secondaryDarkColor"
        app:layout_constraintBottom_toBottomOf="@+id/txt_second_number"
        app:layout_constraintEnd_toStartOf="@+id/txt_second_number"
        app:layout_constraintStart_toEndOf="@+id/txt_first_number"
        app:layout_constraintTop_toTopOf="@+id/txt_first_number" />

    <TextView
        android:id="@+id/txt_second_number"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:text="5"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/secondaryDarkColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_equals"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="="
        android:textSize="20sp"
        android:textColor="@color/secondaryDarkColor"
        app:layout_constraintBottom_toBottomOf="@+id/txt_input_answer"
        app:layout_constraintEnd_toStartOf="@+id/txt_input_answer"
        app:layout_constraintStart_toEndOf="@+id/txt_second_number"
        app:layout_constraintTop_toTopOf="@+id/txt_second_number" />

    <EditText
        android:id="@+id/txt_input_answer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:hint="Enter Num"
        app:layout_constraintBottom_toBottomOf="@+id/txt_second_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_second_number" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="@+id/txt_second_number"
        app:layout_constraintStart_toStartOf="@+id/txt_second_number"
        app:layout_constraintTop_toBottomOf="@+id/txt_second_number"
        app:rippleColor="#26C6B4" />

    <TextView
        android:id="@+id/txt_right_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_second_number"
        app:layout_constraintEnd_toEndOf="@+id/txt_second_number"
        app:layout_constraintStart_toStartOf="@+id/txt_second_number"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>