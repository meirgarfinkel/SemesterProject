<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.SemesterProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
    <item name="colorOnPrimary">@color/primaryTextColor</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/secondaryColor</item>
    <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
    <item name="colorOnSecondary">@color/secondaryTextColor</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
    <item name="android:navigationBarColor" tools:targetApi="l">@color/blackColor</item>
    <!-- Customize your theme here. -->
</style>

<style name="Theme.SemesterProject.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>

<style name="Theme.SemesterProject.NoActionBar.SplashScreenTheme">
    <item name="android:background">@drawable/splash_background</item>
</style>

<style name="Theme.SemesterProject.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

<style name="Theme.SemesterProject.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>